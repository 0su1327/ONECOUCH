<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneCouch_Activity1"
    android:fillViewport="true"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F6EAF">

        <ImageView
            android:id="@+id/tev_id"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et1_name"
            android:layout_marginBottom="10dp"
            android:background="@drawable/pic1"
            />


        <EditText
            android:id="@+id/et1_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:hint="이름을 입력해주세요"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tev_id" />

        <EditText
            android:id="@+id/et2_tall"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:hint="신장을 입력해주세요"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et1_name" />

        <EditText
            android:id="@+id/et3_act"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:hint="활동지수를 입력해주세요"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et2_tall" />

        <ImageButton
            android:id="@+id/btn1_id"
            android:background="@drawable/change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/et1_name"
            app:layout_constraintTop_toBottomOf="@id/tev_id" />

        <ImageButton
            android:id="@+id/btn2_id"
            android:background="@drawable/change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/et2_tall"
            app:layout_constraintTop_toBottomOf="@id/btn1_id" />

        <ImageButton
            android:id="@+id/btn3_id"
            android:background="@drawable/change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/et3_act"
            app:layout_constraintTop_toBottomOf="@id/btn2_id" />

        <Button
            android:id="@+id/next_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_3"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/black"
            android:text="다음"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3_id"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:text="활동량이 적은 경우 - 10 ~ 25(예시 : 앉아서 주로 생활하는 경우, 하루 운동 시간이 1시간 미만인 경우)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn3_id"
            android:layout_marginTop="68dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="16dp"
            android:text="보통의 활동량인 경우 - 30 ~ 35 (예시 : 주3~5회 적당한 운동 혹은 스포츠 활동)"
            />

        <TextView
            android:id="@+id/id_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn3_id"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="122dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:text="많은 활동을 할 경우 - 36~40(예시: 주5회이상 격렬한 운동 혹은 스포츠 활동)"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>